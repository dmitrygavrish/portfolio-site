include common/_mixins
doctype html
html(lang="ru-RU")
  include common/_head
  body
    include common/_browsehappy
    header.header-admin
      div.admin-wrapper
        div.admin-top
          a.admin-top__link(href="index.html") Вернуться на сайт
          h1.admin-top__title Панель администрирования
    main.main-admin
      div.admin-menu
        ul.admin-menu__tabs
          li.admin-menu__tab.admin-menu__tab_active
            a.admin-menu__link(href="#tab-1") Обо мне
          li.admin-menu__tab
            a.admin-menu__link(href="#tab-2") Блог
          li.admin-menu__tab
            a.admin-menu__link(href="#tab-3") Мои работы
      div.admin-contents
        div.admin-contents-bg
          div.admin-wrapper
            div#tab-1.contents-page.contents-page_active
              h2.contents-page__title Страница &laquo;Обо мне&raquo;
              form.skills-upgrade
                div.upgrade-block
                  h3.upgrade-block__title Frontend
                  label.upgrade-block__label(for="number_html") Html
                    input.upgrade-block__input(type="text" name="number-html" id="number_html")
                  label.upgrade-block__label(for="number_css") Css
                    input.upgrade-block__input(type="text" name="number-css" id="number_css")
                  label.upgrade-block__label(for="number_js") JavaScript
                    input.upgrade-block__input(type="text" name="number-js" id="number_js")
                div.upgrade-block
                  h3.upgrade-block__title Backend
                  label.upgrade-block__label(for="number_php") Php
                    input.upgrade-block__input(type="text" name="number-php" id="number_php")
                  label.upgrade-block__label(for="number_mysql") MySql
                    input.upgrade-block__input(type="text" name="number-mysql" id="number_mysql")
                  label.upgrade-block__label(for="number_node") Node.js
                    input.upgrade-block__input(type="text" name="number-node" id="number_node")
                  label.upgrade-block__label(for="number_mongo") Mongo.db
                    input.upgrade-block__input(type="text" name="number-mongo" id="number_mongo")
                div.upgrade-block
                  h3.upgrade-block__title Workflow
                  label.upgrade-block__label(for="number_git") Git
                    input.upgrade-block__input(type="text" name="number-git" id="number_git")
                  label.upgrade-block__label(for="number_gulp") Gulp
                    input.upgrade-block__input(type="text" name="number-gulp" id="number_gulp")
                  label.upgrade-block__label(for="number_bower") Bower
                    input.upgrade-block__input(type="text" name="number-bower" id="number_bower")
                input.skills-upgrade__submit(type="submit" name="submit-skills" value="Сохранить")
            div#tab-2.contents-page
              h2.contents-page__title Страница &laquo;Блог&raquo;
              form.add-article
                h3.add-article__title Добавить запись
                label.add-article__label
                  input.add-article__input(type="text" name="article" id="article" placeholder="Название")
                label.add-article__label
                  input.add-article__input(type="text" name="date" id="date" placeholder="Дата")
                textarea.add-article__text(name="content" id="content" placeholder="Содержание")
                input.add-article__submit(type="submit" name="submit-blog" value="Добавить")
            div#tab-3.contents-page
              h2.contents-page__title Страница &laquo;Мои работы&raquo;
              form.add-project
                h3.add-project__title Добавить работу
                label.add-project__label
                  input.add-project__input(type="text" name="project" id="project" placeholder="Название проекта")
                label.add-project__label
                  input.add-project__input(type="text" name="tech" id="tech" placeholder="Технологии")
                label.add-project__image(for="projectimg") Загрузить картинку
                input.add-project__i-input(type="file" name="projectimg" id="projectimg")
                input.add-project__submit(type="submit" name="submit-project" value="Добавить")